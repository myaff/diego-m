.footer {
  padding: 4rem 0 2.5rem;
  background: $grey;
  color: $white;
  font: 0.875rem/1.3 $font-util;
  text-transform: uppercase;
  text-align: center;

  &-logo {
    margin-bottom: 3.5rem;

    img {
      max-width: 10rem;
    }
  }

  &-addresses {
    margin-bottom: 3rem;

    &__title {
      margin-bottom: 1em;
    }

    &__item {
      margin-top: 1em;
    }
  }

  &-follow {
    margin-bottom: 1.5rem;

    &__title {
      margin-bottom: 1em;
    }

    &__list {
      flexy(center, center);
    }

    &__item {
      flex: 0 0 2.5rem;
      circle(2.5rem);
      background: $white;
      margin: 0 0.25rem;
    }

    &__link {
      flexy(center, center);
      size(100%);
      font-size: 1.25rem;
      line-height: 1;
      color: $grey;
      text-decoration: none;
    }
  }

  &-text {
    
    a {
      color: inherit;
      text-decoration: underline;
    }

  }
}